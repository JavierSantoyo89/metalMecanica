{
    "compilerOptions": {
      "target": "ES2022",                          
      "module": "ES2022",                    
      "lib": ["ES2022"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "./",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "cypress"
    ]
  }